<LinearLayout android:id="@+id/logged_out_inactivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/warning_background"
    android:elevation="@dimen/_5dp"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/_5dp"
    android:paddingRight="@dimen/_5dp"
    android:paddingTop="@dimen/_2dp"
    android:paddingBottom="@dimen/_2dp"
    android:visibility="visible"
    tools:targetApi="lollipop"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_margin="@dimen/_5dp"
        android:src="@drawable/ic_warning" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/alertTxt"
            android:layout_width="match_parent"
            android:lineSpacingExtra="@dimen/_2dp"
            android:padding="@dimen/_2dp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="@string/please_review_employment_information"
            android:textColor="@color/timeOutTextColor"
            android:textSize="@dimen/_12sp" />


    </LinearLayout>
</LinearLayout>
