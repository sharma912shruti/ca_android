<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/slider_menu_background"

    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileBaseLayout"
        android:background="@drawable/drawer_ripple"
        android:orientation="vertical">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:padding="@dimen/_8dp">

        <ImageView
            android:id="@+id/userLogoImg"
            android:layout_width="@dimen/_32dp"
            android:layout_height="@dimen/_32dp"
            android:contentDescription="@string/nav_header_desc"
            android:layout_marginLeft="@dimen/_2dp"
            android:layout_marginRight="@dimen/_7dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="RtlSymmetry" />

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/userNameTxt"
            style="@style/whiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/_12dp"
            android:text="-"

            android:textSize="@dimen/_14sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/userIdTxt"
            style="@style/whiteBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="@dimen/_14sp"
            android:typeface="sans" />



    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5dp"
        android:background="@color/text_grey_100" />

    </LinearLayout>
</LinearLayout>
