<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_grey_600"
    android:orientation="vertical">

    <LinearLayout

        android:id="@+id/alertParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@drawable/warning_background"
        android:elevation="@dimen/_5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5dp"
        android:paddingTop="@dimen/_2dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingBottom="@dimen/_2dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_margin="@dimen/_5dp"
            android:src="@drawable/ic_warning" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <edu.capella.mobile.android.widgets.CPTextView
                android:id="@+id/alertTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/_2dp"
                android:maxLines="4"
                android:padding="@dimen/_2dp"
                android:text="@string/please_review_employment_information"
                android:textColor="@color/timeOutTextColor"
                android:textSize="@dimen/_11sp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/newsParentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:background="@drawable/white_filled_rect_gray"
        android:orientation="vertical"
        android:padding="@dimen/_5dp">

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/_2dp"
            android:textColor="@color/text_grey_900"
            android:textSize="@dimen/_16sp" />

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/dateTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5dp"
            android:padding="@dimen/_2dp"
            android:textColor="@color/text_grey_700"
            android:textSize="@dimen/_11sp" />

    </LinearLayout>


</LinearLayout>
