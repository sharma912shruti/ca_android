<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10dp"
    android:paddingRight="@dimen/_5dp"
    android:paddingLeft="@dimen/_20dp"
    android:paddingTop="@dimen/_20dp"
    android:background="@drawable/white_rounded_background"
    android:orientation="vertical">

    <edu.capella.mobile.android.widgets.CPTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_site"
        android:textColor="@color/blackColor"
        android:layout_marginBottom="@dimen/_10dp"
        android:textSize="@dimen/_16sp"
        android:textStyle="normal" />

    <edu.capella.mobile.android.widgets.CPTextView
        android:id="@+id/messageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/_2dp"
        android:text="@string/leave_app_message"
        android:textColor="@color/text_grey_500"
        android:textSize="@dimen/_14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_18dp"
        android:layout_height="wrap_content">

        <edu.capella.mobile.android.widgets.CPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/dark_blue_color"
            android:layout_toLeftOf="@+id/continueTV"
            android:background="@drawable/background_dialog_textview"
            android:textAllCaps="true"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingTop="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:textSize="@dimen/_12sp"
            android:contentDescription="@string/ada_cancel_button"
            android:textStyle="normal"
            android:id="@+id/cancelTV"
          />

        <edu.capella.mobile.android.widgets.CPTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_text"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_10dp"
            android:paddingTop="@dimen/_5dp"
            android:paddingBottom="@dimen/_5dp"
            android:textSize="@dimen/_12sp"
            android:textStyle="normal"
            android:background="@drawable/background_dialog_textview"
            android:contentDescription="@string/ada_continue_button"
            android:textAllCaps="true"
            android:id="@+id/continueTV"
            android:layout_alignParentEnd="true"
            android:textColor="@color/dark_blue_color"/>

    </RelativeLayout>
</LinearLayout>
