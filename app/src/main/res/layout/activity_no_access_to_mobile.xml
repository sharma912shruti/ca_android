<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/blog_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:background="@color/whiteColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <LinearLayout
                android:id="@+id/backButtonLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/ic_chevron_left" />

                <edu.capella.mobile.android.widgets.CPTextView
                    android:id="@+id/backTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/backButton"
                    android:gravity="center|left"
                    android:importantForAccessibility="no"
                    android:text="@string/back"
                    android:textColor="@color/checkBoxColor"
                    android:textSize="@dimen/_14dp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_30dp"
        android:background="@color/whiteColor"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"

            android:layout_marginBottom="@dimen/_30dp"

            android:background="@color/whiteColor"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:background="@color/headerLineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:layout_marginTop="@dimen/_12dp"
                android:layout_height="wrap_content">

            <edu.capella.mobile.android.widgets.CPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:text="@string/no_access_mobile"
                android:textColor="@color/keepMeTextColor"
                android:textSize="@dimen/_16sp"
                />

            </LinearLayout>

            <edu.capella.mobile.android.widgets.CPTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginRight="@dimen/_30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/complete_an_application"
                android:textColor="@color/tintNormal"
                android:textSize="@dimen/_14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginLeft="@dimen/_30dp"
                android:layout_marginBottom="@dimen/_50dp"
                android:layout_marginRight="@dimen/_25dp"
                android:layout_height="wrap_content">



            <edu.capella.mobile.android.widgets.CPTextView
                android:id="@+id/propectiveInfoTxt"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_filled_rounded"
                android:padding="@dimen/_12dp"
                android:contentDescription="@string/ada_prospective_student_info"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/prospective_student_info"
                android:textColor="@color/checkBoxColor"
                android:textSize="@dimen/_14sp"
                />

                <edu.capella.mobile.android.widgets.CPTextView
                    android:id="@+id/applyAdmissionTxt"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_15dp"
                    android:textAllCaps="true"
                    android:contentDescription="@string/ada_apply_for_admision"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_filled_rounded"
                    android:padding="@dimen/_12dp"
                    android:gravity="center"
                    android:text="@string/apply_for_admision"
                    android:textColor="@color/checkBoxColor"
                    android:textSize="@dimen/_14sp"
                    />

                <edu.capella.mobile.android.widgets.CPTextView
                    android:id="@+id/trialCourseTxt"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_15dp"
                    android:textAllCaps="true"
                    android:contentDescription="@string/ada_trial_course"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_filled_rounded"
                    android:padding="@dimen/_12dp"
                    android:gravity="center"
                    android:text="@string/trial_course"
                    android:textColor="@color/checkBoxColor"
                    android:textSize="@dimen/_14sp"
                    />



            </LinearLayout>







        </LinearLayout>
    </ScrollView>

</LinearLayout>
