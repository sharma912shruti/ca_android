<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"

    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="@dimen/_46dp">

        <RelativeLayout
            android:id="@+id/blog_relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/ada_back_button"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:layout_marginLeft="@dimen/_10dp"
                android:background="@color/whiteColor"
                android:src="@drawable/ic_chevron_left" />

            <edu.capella.mobile.android.widgets.CPTextView
                android:id="@+id/headerTxt"
                android:layout_marginLeft="@dimen/_6sp"
                android:importantForAccessibility="no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:text="@string/back"
                android:textColor="@color/blueBackButton"
                android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
