<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/discussionTopicListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:paddingLeft="@dimen/_19dp"
        android:paddingRight="@dimen/_17dp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                <edu.capella.mobile.android.widgets.CPTextView
                    android:id="@+id/subjectTxt"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hello and welcome "
                    android:textColor="@color/text_grey_900"
                    android:textSize="@dimen/_14sp" />

                    <LinearLayout
                        android:id="@+id/unreadTopicReplyLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/_5dp"
                            android:src="@drawable/ic_blue_dot"
                            android:visibility="visible" />

                        <edu.capella.mobile.android.widgets.CPTextView

                            android:layout_width="wrap_content"
                            android:id="@+id/unreadReplyTxtWithDot"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/unread_replies_to_you"
                            android:textColor="@color/text_grey_500"
                            android:textSize="@dimen/_11sp" />


                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="top"
                    android:tint="@color/blue_600"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>


        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/postDateTxt"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="4/3/17"
            android:textColor="@color/text_grey_900"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp" />

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/postedNameTxt"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true"
            android:text="Jamie Earl"
            android:textColor="@color/text_grey_900"
            android:textSize="@dimen/_14sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="@dimen/_2dp"
    android:id="@+id/postedEmployeeRoleLayout"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_16dp"
        android:layout_height="@dimen/_16dp"
        android:tint="@color/orangeColor"
        android:layout_marginRight="@dimen/_4dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_stars"/>

    <edu.capella.mobile.android.widgets.CPTextView
        android:id="@+id/postedEmployeeRoleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary In"
        android:textColor="@color/text_grey_500"
        android:textSize="@dimen/_11sp" />
</LinearLayout>

        <edu.capella.mobile.android.widgets.CPTextView
            android:id="@+id/bodyText"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My name is Jamie Earl and Iâ€™m very happy to be here.  I first pursued my MBA in Atlanta where I attended the University of Georgia."

             android:ellipsize="end"
            android:textColor="@color/text_grey_900"
            android:textStyle="bold"
            android:textSize="@dimen/_14sp" />

        <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_height="@dimen/_1dp"
                android:background="@color/background_grey_600" />


    </LinearLayout>




</LinearLayout>
