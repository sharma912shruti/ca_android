<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:background="@color/whiteColor"
    android:orientation="vertical"
    android:padding="@dimen/_6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_height="wrap_content">

        <edu.capella.mobile.android.widgets.CPTextView
            android:layout_width="wrap_content"
            android:text="@string/drafts"
            android:textStyle="normal"
            android:background="@color/background_grey_600"
            android:paddingBottom="@dimen/_3dp"
            android:paddingTop="@dimen/_3dp"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/_6dp"
            android:paddingLeft="@dimen/_6dp"
            android:textSize="@dimen/_11sp"
            android:textColor="@color/text_gray_900"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <edu.capella.mobile.android.widgets.CPTextView
        android:id="@+id/subjectTxt"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/text_black_900"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/responseToTxt"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_11sp"
            android:visibility="gone"
            android:textColor="@color/headerLineColor"
            android:layout_height="wrap_content"/>

        <edu.capella.mobile.android.widgets.CPTextView
            android:layout_width="wrap_content"
            android:text=""
            android:id="@+id/draftDiscriptionTxt"
            android:layout_marginTop="@dimen/_1dp"
            android:layout_centerVertical="true"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/blackColor"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <edu.capella.mobile.android.widgets.CPTextView
        android:id="@+id/discussionTxt"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_marginTop="@dimen/_10dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_11sp"
        android:textColor="@color/text_gray_900"
        android:layout_height="wrap_content"/>

    <edu.capella.mobile.android.widgets.CPTextView
        android:layout_width="wrap_content"
        android:id="@+id/dateTxt"
        android:text="Last Saved on 2/17/2019 11:23 a.m. Central"
        android:layout_marginTop="@dimen/_1dp"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_11sp"
        android:textColor="@color/text_gray_900"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/borderLineColor"
        android:layout_marginTop="@dimen/_23dp"
        android:layout_height="@dimen/_1dp"/>







</LinearLayout>
