<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/checkBoxColor" />
            <solid android:width="@dimen/_1dp" android:color="@color/background_grey_600" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/checkBoxColor" />
            <solid android:width="@dimen/_1dp" android:color="@color/background_grey_600" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3dp" />
            <stroke android:width="@dimen/_1dp" android:color="@color/checkBoxColor" />
            <solid android:width="@dimen/_1dp" android:color="@color/whiteColor" />
        </shape>
    </item>


</selector>

