<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:width="1dip" android:color="@color/blue_900" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:color="@color/blue_900"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="@dimen/_1dp" android:color="@color/blue_300"/>
            <solid android:width="1dip" android:color="@color/whiteColor" />

        </shape>
    </item>


</selector>