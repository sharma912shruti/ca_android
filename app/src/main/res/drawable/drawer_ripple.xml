<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/text_grey_100">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_grey_100" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/slider_menu_background"
                android:startColor="@color/slider_menu_background"
                android:type="linear" />
             />
        </shape>
    </item>
</ripple>